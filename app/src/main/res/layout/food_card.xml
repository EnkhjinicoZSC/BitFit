<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_foodName"
        android:layout_width="72dp"
        android:layout_height="50dp"
        android:layout_marginStart="6dp"
        android:text="Pizza"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_calories"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:text="1200"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_calories_text"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tv_calories_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Calories"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_calories"
        app:layout_constraintStart_toEndOf="@id/tv_calories" />

</androidx.constraintlayout.widget.ConstraintLayout>
